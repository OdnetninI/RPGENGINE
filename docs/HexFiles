TilesetMetaData: {
  comment:    "Tileset Metadata"
  extension:  ".til"
  hexType:    "BIG ENDIAN"

  Data: {
    uint16_t    id
    string      filename
    byte        ff            =       0xFF
    uint16_t    tileW
    uint16_t    tileH
    uint16_t    tilesetW
    uint16_t    tilesetH
  }
}

PlayerMetaData: {
  comment:     "Player Metadata"
  extension:   ".pl"
  hexType:    "BIG ENDIAN"

  Data: {
    string      inGameMetaDataSpriteFilename
    byte        ff            =       0xFF
    string      inBattleMetaDataSpriteFilename
    byte        ff            =       0xFF
  }
}

SpriteMetaData: {
  comment:    "Sprite Metadata"
  extension:  ".spr"
  hexType:    "BIG ENDIAN"

  Data: {
    string      filename
    byte        stringFinal + animated    =  0xFE / 0xFF (noAnim/Anim)
    uint16_t    spriteW
    uint16_t    spriteH
    uint16_t    spriteSheetW
    uint16_t    spriteSheetH
    int         animationFrames

    uint16_t    frame
    float       seconds (nextFrame time)
          .
          .
          .
    uint16_t    frame
    float       seconds (nextFrame time)
  }
}

MapMetaData: {
  comment:     "Map Metadata"
  extension:   ".mp"
  hexType:    "BIG ENDIAN"

  Data: {
    uint16_t    id
    uint16_t    rightMapId
    uint16_t    lefttMapId
    uint16_t    upMapId
    uint16_t    downMapId
    string      filenameTilesetMetaData
    byte        ff            =       0xFF
    string      filenameMap
    byte        ff            =       0xFF
  }
}

MapData: {
  comment:    "Map Data"
  extension:  ".map"
  hexType:    "BIG ENDIAN"

  Data: {
    uint16_t    widthTiles;
    uint16_t    heightTiles;
    uint8_t     numlayers; // First Up, next down,... last = most down
    uint16_t[]  tiles // layer 0
    uint16_t[]  tiles // layer 1
    uint16_t[]  tiles // layer 2
            .
            .
            .
    uint16_t[]  tiles // layer 255
  }
}
